{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "useDefineForClassFields": false,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "newLine": "LF",
    "outDir": "dist",
    "removeComments": false,
    "sourceMap": false,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "__tests__"
  ]
}
